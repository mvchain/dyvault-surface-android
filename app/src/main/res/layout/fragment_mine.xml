<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">

    <View
        android:id="@+id/status_bar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/colorWhite" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/mine_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@color/register_button_bg" />

        <TextView
            android:id="@+id/mine_nickname"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Android Studio"
            android:textColor="@color/content_tv_bg"
            android:textSize="19sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/mine_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="6dp"
        android:text="601***31@qq.com"
        android:textColor="@color/mine_email_tv_bg"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/mine_account"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="26dp"
        android:background="@drawable/shape_login_edit_14dp"
        android:drawableRight="@drawable/next_icon_black"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="18dp"
        android:text="账户安全"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/mine_language"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/shape_login_edit_14dp"
        android:drawableRight="@drawable/next_icon_black"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="18dp"
        android:text="@string/language_title"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/mine_about"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/shape_login_edit_14dp"
        android:drawableRight="@drawable/next_icon_black"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="18dp"
        android:text="关于Topay"
        android:textSize="15sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/login_up"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:textSize="19sp"
        android:textStyle="bold"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="100dp"
        android:layout_marginRight="80dp"
        android:background="@drawable/shape_check_update_bg_22dp"
        android:gravity="center"
        android:text="登出"
        android:textColor="@color/white" />
</LinearLayout>