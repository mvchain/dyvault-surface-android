<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="15dp"
    android:background="@drawable/shape_login_edit_14dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_increase_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="15dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="8dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_increase_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/login_content"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/item_increase_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/login_content"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/item_increase_add"
        android:layout_width="66dp"
        android:layout_height="32dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/shape_add_increase_16dp"
        android:gravity="center"
        android:text="添加"
        android:textColor="@color/content_tv_bg"
        android:textSize="13sp" />
</LinearLayout>