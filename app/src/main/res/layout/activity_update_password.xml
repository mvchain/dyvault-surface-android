<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <View
        android:id="@+id/status_bar"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <TextView
            android:id="@+id/update_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="修改登录密码"
            android:textColor="@color/login_title_tv_bg"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/update_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:onClick="onClick"
            android:scaleType="center"
            android:src="@drawable/back_black" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="36dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/shape_login_edit_14dp"
        android:orientation="horizontal"
        android:paddingRight="12dp">

        <EditText
            android:id="@+id/update_old_password"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@drawable/shape_login_edit_14dp"
            android:hint="原登录密码"
            android:inputType="textPassword"
            android:maxLines="1"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="@color/login_edit_tv_bg"
            android:textSize="15sp" />

        <CheckBox
            android:id="@+id/update_old_login_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_password_show_or_hide"
            android:button="@null"
            android:gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/shape_login_edit_14dp"
        android:orientation="horizontal"
        android:paddingRight="12dp">

        <EditText
            android:id="@+id/update_new_password"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@drawable/shape_login_edit_14dp"
            android:hint="新登录密码"
            android:inputType="textPassword"
            android:maxLines="1"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="@color/login_edit_tv_bg"
            android:textSize="15sp" />

        <CheckBox
            android:id="@+id/update_new_login_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_password_show_or_hide"
            android:button="@null"
            android:gravity="center" />
    </LinearLayout>

    <TextView
        android:id="@+id/forget_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="24dp"
        android:layout_marginRight="35dp"
        android:onClick="onClick"
        android:text="忘记原密码？"
        android:textColor="@color/login_button_bg"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/update_submit"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="160dp"
        android:layout_marginRight="110dp"
        android:background="@drawable/shape_gradient_submit_22dp"
        android:gravity="center"
        android:onClick="onClick"
        android:text="确认"
        android:textColor="@color/colorWhite"
        android:textSize="15sp" />
</LinearLayout>