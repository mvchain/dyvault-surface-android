<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_marginTop="12dp"
              android:layout_marginLeft="20dp"
              android:padding="12dp"
              android:background="@drawable/shape_coins_bg"
              android:layout_marginRight="20dp"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <TextView
            android:id="@+id/coins_buying_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="购买USDT"
            android:textColor="@color/coins_buying_name"
            android:textSize="13sp"/>
    <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/coins_price"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_below="@id/coins_buying_name"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="12345.00 CNY"
                android:textColor="@color/content_tv_bg"
                android:textSize="17sp"
                android:textStyle="bold"/>
        <TextView
                android:id="@+id/coins_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已收款"
                android:textColor="@color/result_points"
                android:textSize="17sp"/>
    </LinearLayout>

    <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="8dp"
                android:text="订单号"
                android:textColor="@color/content_tv_bg"
                android:textSize="13sp"/>
        <TextView
                android:id="@+id/coins_order"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:text="134678"
                android:textColor="@color/content_tv_bg"
                android:textSize="13sp"/>
    </LinearLayout>
    <TextView
            android:id="@+id/coins_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="2018-03-21 16:16:00"
            android:textColor="@color/login_edit_tv_bg"
            android:textSize="13sp"/>

</LinearLayout>