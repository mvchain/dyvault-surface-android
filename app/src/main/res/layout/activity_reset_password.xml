<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <View
        android:id="@+id/status_bar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/colorWhite" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <TextView
            android:id="@+id/reset_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="修改登录密码"
            android:textColor="@color/login_title_tv_bg"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/reset_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:onClick="onClick"
            android:scaleType="center"
            android:src="@drawable/back_black" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="36dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/shape_login_edit_14dp"
        android:orientation="horizontal"
        android:paddingRight="12dp">

        <EditText
            android:id="@+id/reset_email"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="@string/account_new_password"
            android:maxLines="1"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="@color/login_edit_tv_bg"
            android:textSize="15sp" />

        <CheckBox
            android:id="@+id/reset_pwd_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_password_show_or_hide"
            android:button="@null"
            android:gravity="center" />
    </LinearLayout>

    <TextView
        android:id="@+id/reset_next"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="180dp"
        android:layout_marginRight="110dp"
        android:background="@drawable/shape_login_bg_22dp"
        android:gravity="center"
        android:onClick="onClick"
        android:text="@string/confirm"
        android:textColor="@color/colorWhite"
        android:textSize="15sp" />
</LinearLayout>