<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_assets_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="20dp"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingTop="13dp"
    android:paddingBottom="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_assets_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="11dp" />

    <TextView
        android:id="@+id/item_assets_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9dp"
        android:layout_toRightOf="@id/item_assets_icon"
        android:text="-"
        android:textColor="@color/content_tv_bg"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/item_assets_introduction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_assets_type"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@id/item_assets_icon"
        android:text="-"
        android:textColor="@color/login_edit_tv_bg"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/item_assets_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="13dp"
        android:text="-"
        android:textColor="@color/content_tv_bg"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/item_assets_actual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_assets_money"
        android:layout_alignParentRight="true"
        android:layout_marginTop="4dp"
        android:layout_marginRight="13dp"
        android:text="-"
        android:textColor="@color/login_edit_tv_bg"
        android:textSize="11sp" />
</RelativeLayout>