<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Text_TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/edit_bg</item>
    </style>

    <style name="Edit_Style" parent="@android:style/TextAppearance">
        <item name="colorControlNormal">@color/line_gray</item>
        <item name="colorControlActivated">@color/line_gray</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

</resources>
